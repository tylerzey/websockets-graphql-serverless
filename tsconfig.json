{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "target": "es5",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2019"],
    "rootDir": "./"
  }
}
